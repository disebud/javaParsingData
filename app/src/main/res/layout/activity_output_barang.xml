<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    tools:context=".outputBarang">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OUTPUT BARANG"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#000"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="45dp"
            android:layout_gravity="center_vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="50dp">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="KODE BARANG "
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="16sp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0000000000000"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/tv_kode_brg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="NAMA BARANG "
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="SIAPA"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/tv_nama_brg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="HARGA BARANG "
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="50000"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/tv_harga_brg"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="150dp"
                    android:layout_height="30dp"
                    android:text="STOK BARANG "
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="50"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:id="@+id/tv_stok_brg"/>

            </LinearLayout>



            <Button
                android:id="@+id/btn_ke_input_brg"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:onClick="backToInputBrg"
                android:text="KEMBALI KE INPUT BARANG"
                android:textColor="#0055FF"
                android:backgroundTint="#BDBDBD" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>